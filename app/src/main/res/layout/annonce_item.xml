<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp"
    android:layout_marginTop ="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_view_image_annonce"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/my_text_view_titre_annonce"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="Titre"
            />
        <TextView

            android:id="@+id/my_text_view_description_annonce"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="Description blablablablabla
encore du blablablablabla"
            />



    </LinearLayout>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/favorite_icon"
        android:id="@+id/like_button"
        android:background="@color/cardview_light_background"/>

</androidx.cardview.widget.CardView>


<!-- A CardView that contains two TextView and one imageView -->
